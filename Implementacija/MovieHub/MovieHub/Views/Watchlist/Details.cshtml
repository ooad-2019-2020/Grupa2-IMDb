@model MovieHub.Models.Watchlist

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Watchlist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filmovi)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Film</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Filmovi)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Film.Naziv)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Film.Ocjena)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.WatchlistID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
